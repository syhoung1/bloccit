<h1>Edit questions</h1>

<div class="row">
  <div class="col-md-4">
    <p>Question guidelines</p>
    <ul>
      <li>This is a guideline</li>
      <li>Another one</li>
      <li>This is not a guideline</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @question do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control", placeholder: "Enter body text" %>
      </div>
      <div class="form-group">
        <%= f.label :resolved %>
        <%= f.check_box :resolved %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: "btn btn-success" %>
      </div>
      <% end %>
  </div>
</div>
